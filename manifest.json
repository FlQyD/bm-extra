{
    "manifest_version": 3,
    "name": "bm-extra",
    "version": "1.0",
    "description": "BattleMetrics Extension that aims to enhance your experience with certain quality of life features.",
    "author": "FlQyD",
    "content_scripts": [
        {
            "matches": [
                "https://www.battlemetrics.com/*"
            ],
            "run_at": "document_start",
            "js": [
                "./main.js"
            ],
            "css": [
                "./assets/style/main.css",
                "./assets/style/settings.css",
                "./assets/style/sidebar.css"
            ]
        }
    ],
    "background": {
        "service_worker": "bg/bg.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/img/arrow.png",
                "assets/img/copy.png",
                "assets/img/copy-gray.png",
                "assets/img/settings.png",
                "assets/img/unknown.png",
                "assets/img/bm-logo-small.png",
                "assets/img/no-signal.png",
                "assets/img/danger.png",
                "assets/img/clear.png",
                "assets/img/warning.png",
                
                "modules/display.js",
                "modules/getInfoPanel.js",
                "modules/settings.js",
                "modules/misc.js"
            ],
            "matches": [
                "*://www.battlemetrics.com/*",
                "*://battlemetrics.com/*"
            ]
        }
    ],
    "host_permissions": [
        "*://api.battlemetrics.com/*",
        "*://api.steampowered.com/*",
        "*://rust-api.flqyd.dev/*"
    ]
}