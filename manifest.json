{
    "manifest_version": 3,
    "name": "bm-extra",
    "version": "1.0",
    "description": "BattleMetrics Extension that aims to enhance your experience with quality of life features.",
    "author": "FlQyD",
    "content_scripts": [
        {
            "matches": [
                "https://www.battlemetrics.com/*"
            ],
            "run_at": "document_start",
            "js": [
                "./main.js"
            ],
            "css": [
                "./assets/style/main.css",
                "./assets/style/settings.css",
                "./assets/style/sidebar.css"
            ]
        }
    ],
    "background": {
        "service_worker": "bg/bg.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/img/*.png",

                "modules/misc.js",
                "modules/display.js",
                "modules/getInfoPanel.js",
                "modules/settings.js",
                "modules/sidebar.js"
            ],
            "matches": [
                "*://www.battlemetrics.com/*",
                "*://battlemetrics.com/*"
            ]
        }
    ],
    "host_permissions": [
        "*://api.battlemetrics.com/*",
        "*://api.steampowered.com/*",
        "*://rust-api.flqyd.dev/*",
        "*://rust-api.facepunch.com/*"
    ]
}